@model IEnumerable<ProyectoWeb.Models.Clientes>

@{
    ViewData["Title"] = "Index";
        Layout = "_LogeadoAdmin";
@*
validacion de la session, si es administrador, se aplica el layout correspondiente
    if (session=="admin")
    {
        Layout = "_LogeadoAdmin";
    }else{
        Layout = "_LogeadoUsuario";
    }
*@
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CedulaJuridica)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PaginaWeb)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DireccionFisica)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NúmerodeTelefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sector)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CedulaJuridica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaginaWeb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DireccionFisica)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NúmerodeTelefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sector)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
